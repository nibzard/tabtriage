# Development Environment Configuration
NODE_ENV=development

# Database Configuration
# Use local SQLite for development
DATABASE_MODE=local

# Authentication (generate a new secret for development)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Turso Configuration (leave empty for local development)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# OpenAI API configuration (optional for development)
OPENAI_API_KEY=

# Jina AI API configuration (optional for development)
JINA_API_KEY=
JINA_API_URL=https://api.jina.ai/v1/embeddings

# Uploadthing configuration (optional for development)
UPLOADTHING_TOKEN=

# Storage configuration
STORAGE_PROVIDER=uploadthing
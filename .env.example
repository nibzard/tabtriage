# Environment Configuration
NODE_ENV=development

# Database Configuration
# Set to 'local' for development with SQLite file, 'turso' for cloud database
DATABASE_MODE=local

# Turso Configuration (required when DATABASE_MODE=turso)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Authentication (required)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# OpenAI API configuration (optional)
OPENAI_API_KEY=

# Jina AI API configuration (optional)
JINA_API_KEY=
JINA_API_URL=https://api.jina.ai/v1/embeddings

# Gemini AI API configuration (optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-lite-preview-06-17

# Uploadthing configuration (optional)
UPLOADTHING_TOKEN=

# Storage configuration
STORAGE_PROVIDER=uploadthing
